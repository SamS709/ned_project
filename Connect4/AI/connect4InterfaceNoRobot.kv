#:import box_layout_with_action_bar box_layout_with_action_bar
#:set LIGHT_GREEN  [169 / 256, 221 / 256, 175 / 256, 1]
#:set GREEN  [62 / 256, 182 / 256, 75 / 256, 1]
#:set DARK_GREEN  [16 / 256, 118 / 256, 0, 1]
#:set LIGHT_RED  [256/256,187/256,187/256,1]
#:set RED  [237/256,79/256,79/256,1]
#:set DARK_RED  [170/256,14/256,14/256,1]
#:set LIGHT_BLUE  [182 / 256, 229 / 265, 246 / 256, 1]
#:set BLUE  [112 / 256, 159 / 265, 256 / 256, 1]
#:set DARK_BLUE  [82 / 256, 129 / 265, 256 / 256, 1]

<Grille>:
    

<Connect4GameNoRobot>:

<Mode>:
    orientation : 'vertical'
    BoxLayout:
        id:B1
        size_hint:.2,None
    BoxLayout:
        id:B2
        Button:
            background_color:(0,0,0,0)
            canvas.before:
                Color:
                    rgba : root.colors1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [58]
            text: '1 Player'
            size_hint : .5,1
            on_press : root.changeColor(self)
            on_release : root.pressB(self)

        Button:
            background_color:(0,0,0,0)
            canvas.before:
                Color:
                    rgba : root.colors2
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [58]
                Color:
                    rgba : 1,1,1,1
                Line:
                    rounded_rectangle : self.x, self.y, self.width, self.height, 58, 58, 58, 58, 100
                    width : 2
            text: '2 Players'
            size_hint : .5,1
            on_press : root.changeColor(self)
            on_release : root.pressB(self)

    BoxLayout:
        id:B3