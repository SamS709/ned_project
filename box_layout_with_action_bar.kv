<BoxLayoutWithActionBar>:
    


    orientation: "vertical"
    ActionBar:
        background_image : ''
        background_down: ''
        background_color: [0,0,1,1]
        border : [0,0,0,0]
        canvas.after:
            Color:
                rgba : 1,1,1,1
            Line:
                points : 0,self.y,self.width,self.y
                width:2
        ActionView:
            ActionPrevious:
                title: root.title #c'est le titre donnÃ© au BoxLayoutWithActionBar
                #on_release: root.parent.parent.pop()     # on remonte dans les parents : BoxLayoutWithActionBar->Screen->ScreenManager
                on_release: app.manager.pop()
                app_icon : "images/lab_logo.png"
                app_icon_height : "35dp"
                app_icon_width : "35dp"
            ActionButton:
                id: wifi
                color : root.button_color_wifi
                icon: root.icon
                on_press:root.on_press()